{
  "compilerOptions": {
    "target": "es2017",
    "lib": ["es2017"],
    "outDir": "./build",
    "skipLibCheck": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "strict": true,
    "module": "commonjs",
    "esModuleInterop": true,
    "declaration": true,
    "types": ["node"],
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "old/**/*"
  ]
}
